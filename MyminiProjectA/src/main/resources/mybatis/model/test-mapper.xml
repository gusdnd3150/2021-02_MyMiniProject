<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
	PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">


<mapper namespace="user">
	
	<select id="selectUser" resultType="userVo" parameterType="userVo">
		SELECT *
		 FROM users
		 where user_id=#{user_id}
	</select>
	
	<select id="all" resultType="map">
	SELECT * FROM boards
	</select>
	
	<insert id="userJoin" parameterType="userVo" useGeneratedKeys="true" keyProperty="id">
      INSERT INTO users (user_id,user_name,user_email,user_password,autho,joinDate)
      VALUES (#{user_id}, #{user_name}, #{user_email}, #{user_password}, #{autho}, NOW())
	</insert>
      
       <select id="selectUserById" parameterType="String" resultType="userVo">
        select *
        from users
        where user_id=#{user_id}
       </select>

    <insert id="user.inserUserDetail" parameterType="userVo">
        INSERT INTO users_detail(id,user_phone,user_age,user_gender,user_zip,user_address1,user_address2)
        VALUES(#{id},#{user_phone},#{user_age},#{user_gender},#{user_zip},#{user_address1},#{user_address2})
    </insert>

</mapper>